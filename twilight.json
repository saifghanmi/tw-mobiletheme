{
  "name": {
    "ar": "سلة موبايل يونيفايد",
    "en": "Salla Mobile Unified"
  },
  "repository": "https://github.com/saifghanmi/solving-issue",
  "author_email": "onlybusiness.saifghanmi@gmail.com",
  "description": {
    "ar": "ثيم احترافي يجمع بين تجربة الويب والتطبيق المحمول في منظومة واحدة متكاملة",
    "en": "A professional unified theme that bridges web and mobile app experience through a single shared configuration"
  },
  "features": [
    "mega-menu",
    "fonts",
    "color",
    "breadcrumb",
    "unite-cards-height",
    "component-featured-products",
    "component-fixed-banner",
    "component-fixed-products",
    "component-products-slider",
    "component-photos-slider",
    "component-parallax-background",
    "component-testimonials",
    "component-square-photos",
    "component-store-features",
    "component-youtube",
    "menu-images",
    "filters"
  ],
  "settings": [
    {
      "id": "header_is_sticky",
      "type": "boolean",
      "format": "switch",
      "label": { "ar": "تثبيت الهيدر عند التمرير", "en": "Sticky Header on Scroll" },
      "icon": "sicon-menu",
      "required": false,
      "value": true
    },
    {
      "id": "topnav_is_dark",
      "type": "boolean",
      "format": "switch",
      "label": { "ar": "الشريط العلوي داكن", "en": "Dark Top Navigation" },
      "icon": "sicon-moon",
      "required": false,
      "value": false
    },
    {
      "id": "show_tags",
      "type": "boolean",
      "format": "switch",
      "label": { "ar": "إظهار الوسوم", "en": "Show Tags" },
      "icon": "sicon-tag",
      "required": false,
      "value": true
    },
    {
      "id": "sticky_add_to_cart",
      "type": "boolean",
      "format": "switch",
      "label": { "ar": "زر إضافة للسلة ثابت", "en": "Sticky Add to Cart Button" },
      "description": { "ar": "زر السلة ثابت أسفل الشاشة على الجوال", "en": "Sticky cart button at bottom on mobile" },
      "icon": "sicon-shopping-cart",
      "required": false,
      "value": true
    },
    {
      "id": "imageZoom",
      "type": "boolean",
      "format": "switch",
      "label": { "ar": "تكبير صور المنتج", "en": "Product Image Zoom" },
      "icon": "sicon-zoom-in",
      "required": false,
      "value": true
    },
    {
      "id": "footer_is_dark",
      "type": "boolean",
      "format": "switch",
      "label": { "ar": "تذييل الصفحة داكن", "en": "Dark Footer" },
      "icon": "sicon-moon",
      "required": false,
      "value": false
    },
    {
      "id": "primary_color",
      "type": "string",
      "format": "color",
      "label": { "ar": "اللون الرئيسي", "en": "Primary Color" },
      "description": { "ar": "يُطبَّق على الويب والتطبيق المحمول معاً", "en": "Applied to both web theme and mobile app" },
      "icon": "sicon-color-palette",
      "required": false,
      "value": "#FF5028"
    },
    {
      "id": "font_family",
      "type": "string",
      "format": "dropdown-list",
      "label": { "ar": "نوع الخط", "en": "Font Family" },
      "description": { "ar": "يُستخدم في الويب والتطبيق المحمول", "en": "Used across web and mobile app" },
      "icon": "sicon-font",
      "required": false,
      "value": "Dubai",
      "options": [
        { "id": "Dubai", "label": { "ar": "دبي", "en": "Dubai" } },
        { "id": "Estedad", "label": { "ar": "استعداد", "en": "Estedad" } },
        { "id": "Gulf", "label": { "ar": "الخليج", "en": "Gulf" } },
        { "id": "Samim", "label": { "ar": "صميم", "en": "Samim" } }
      ]
    },
    {
      "id": "mobile_bottom_nav",
      "type": "string",
      "format": "dropdown-list",
      "label": { "ar": "تبويبات شريط الجوال السفلي", "en": "Mobile Bottom Navigation Tabs" },
      "description": { "ar": "اختر التبويبات الظاهرة في شريط التنقل السفلي بالتطبيق", "en": "Choose tabs shown in the mobile app bottom navigation bar" },
      "icon": "sicon-grid",
      "required": false,
      "value": "home-categories-cart-wishlist-settings",
      "options": [
        { "id": "home-categories-cart-wishlist-settings", "label": { "ar": "الرئيسية | التصنيفات | السلة | المفضلة | الإعدادات", "en": "Home | Categories | Cart | Wishlist | Settings" } },
        { "id": "home-categories-cart-orders-settings", "label": { "ar": "الرئيسية | التصنيفات | السلة | الطلبات | الإعدادات", "en": "Home | Categories | Cart | Orders | Settings" } },
        { "id": "home-search-cart-wishlist-settings", "label": { "ar": "الرئيسية | البحث | السلة | المفضلة | الإعدادات", "en": "Home | Search | Cart | Wishlist | Settings" } }
      ]
    },
    {
      "id": "show_loyalty_program",
      "type": "boolean",
      "format": "switch",
      "label": { "ar": "برنامج الولاء", "en": "Loyalty Program" },
      "icon": "sicon-star",
      "required": false,
      "value": true
    },
    {
      "id": "show_brands",
      "type": "boolean",
      "format": "switch",
      "label": { "ar": "إظهار الماركات", "en": "Show Brands" },
      "icon": "sicon-badge",
      "required": false,
      "value": true
    },
    {
      "id": "show_blog",
      "type": "boolean",
      "format": "switch",
      "label": { "ar": "إظهار المدونة", "en": "Show Blog" },
      "icon": "sicon-news",
      "required": false,
      "value": true
    },
    {
      "id": "squar_photo_bg_image_size",
      "type": "string",
      "format": "dropdown-list",
      "label": { "ar": "حجم صورة الخلفية", "en": "Background Image Size" },
      "icon": "sicon-image",
      "required": false,
      "value": "cover",
      "options": [
        { "id": "cover", "label": { "ar": "تغطية كاملة", "en": "Cover" } },
        { "id": "contain", "label": { "ar": "احتواء", "en": "Contain" } }
      ]
    },
    {
      "id": "products_per_row_mobile",
      "type": "string",
      "format": "dropdown-list",
      "label": { "ar": "عدد المنتجات في الصف (الجوال)", "en": "Products Per Row (Mobile)" },
      "description": { "ar": "يُطبَّق على التطبيق المحمول فقط", "en": "Applies to mobile app only" },
      "icon": "sicon-grid",
      "required": false,
      "value": "2",
      "options": [
        { "id": "1", "label": { "ar": "منتج واحد", "en": "1 Product" } },
        { "id": "2", "label": { "ar": "منتجان", "en": "2 Products" } },
        { "id": "3", "label": { "ar": "ثلاثة منتجات", "en": "3 Products" } }
      ]
    }
  ],
  "components": [
    {
      "key": "hero-slider",
      "title": { "ar": "صور بانر متحركة", "en": "Hero Banner Slider" },
      "icon": "sicon-images",
      "path": "home.hero-slider",
      "is_default": true,
      "mobile_component": "HeroSlider",
      "fields": [
        {
          "id": "slides",
          "type": "collection",
          "format": "collection",
          "label": { "ar": "الشرائح", "en": "Slides" },
          "fields": [
            { "id": "image", "type": "string", "format": "image", "label": { "ar": "الصورة", "en": "Image" }, "required": true },
            { "id": "image_mobile", "type": "string", "format": "image", "label": { "ar": "صورة الجوال", "en": "Mobile Image" } },
            { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" } },
            { "id": "subtitle", "type": "string", "format": "text", "label": { "ar": "العنوان الفرعي", "en": "Subtitle" } },
            { "id": "url", "type": "string", "format": "text", "label": { "ar": "الرابط", "en": "URL" } },
            { "id": "button_text", "type": "string", "format": "text", "label": { "ar": "نص الزر", "en": "Button Text" } }
          ]
        },
        { "id": "auto_play", "type": "boolean", "format": "switch", "label": { "ar": "تشغيل تلقائي", "en": "Auto Play" }, "value": true },
        { "id": "interval", "type": "number", "format": "text", "label": { "ar": "مدة الانتقال (ثانية)", "en": "Slide Interval (seconds)" }, "value": 4 }
      ]
    },
    {
      "key": "featured-products",
      "title": { "ar": "منتجات مميزة", "en": "Featured Products" },
      "icon": "sicon-star",
      "path": "home.featured-products",
      "is_default": true,
      "mobile_component": "FeaturedProducts",
      "fields": [
        { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" }, "value": { "ar": "منتجات مميزة", "en": "Featured Products" } },
        { "id": "products", "type": "collection", "format": "products", "label": { "ar": "المنتجات", "en": "Products" } },
        {
          "id": "layout",
          "type": "string",
          "format": "dropdown-list",
          "label": { "ar": "طريقة العرض", "en": "Layout" },
          "value": "grid",
          "options": [
            { "id": "grid", "label": { "ar": "شبكة", "en": "Grid" } },
            { "id": "horizontal", "label": { "ar": "أفقي منزلق", "en": "Horizontal Scroll" } }
          ]
        },
        { "id": "show_all_url", "type": "string", "format": "text", "label": { "ar": "رابط عرض الكل", "en": "Show All URL" } }
      ]
    },
    {
      "key": "categories-row",
      "title": { "ar": "التصنيفات", "en": "Categories" },
      "icon": "sicon-grid",
      "path": "home.categories-row",
      "is_default": true,
      "mobile_component": "CategoriesRow",
      "fields": [
        { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" }, "value": { "ar": "التصنيفات", "en": "Categories" } },
        { "id": "categories", "type": "collection", "format": "categories", "label": { "ar": "التصنيفات", "en": "Categories" } },
        { "id": "show_images", "type": "boolean", "format": "switch", "label": { "ar": "إظهار صور التصنيفات", "en": "Show Category Images" }, "value": true }
      ]
    },
    {
      "key": "products-slider",
      "title": { "ar": "شريط منتجات مع خلفية", "en": "Products Slider with Background" },
      "icon": "sicon-shopping-bag",
      "path": "home.products-slider",
      "is_default": false,
      "mobile_component": "ProductsSlider",
      "fields": [
        { "id": "background_image", "type": "string", "format": "image", "label": { "ar": "صورة الخلفية", "en": "Background Image" } },
        { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" } },
        { "id": "description", "type": "string", "format": "textarea", "label": { "ar": "الوصف", "en": "Description" } },
        { "id": "products", "type": "collection", "format": "products", "label": { "ar": "المنتجات", "en": "Products" } },
        { "id": "show_all_url", "type": "string", "format": "text", "label": { "ar": "رابط عرض الكل", "en": "Show All URL" } }
      ]
    },
    {
      "key": "banner-grid",
      "title": { "ar": "بنرات شبكية", "en": "Banner Grid" },
      "icon": "sicon-image",
      "path": "home.banner-grid",
      "is_default": false,
      "mobile_component": "BannerGrid",
      "fields": [
        {
          "id": "banners",
          "type": "collection",
          "format": "collection",
          "label": { "ar": "البنرات", "en": "Banners" },
          "fields": [
            { "id": "image", "type": "string", "format": "image", "label": { "ar": "الصورة", "en": "Image" }, "required": true },
            { "id": "url", "type": "string", "format": "text", "label": { "ar": "الرابط", "en": "URL" } },
            { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" } }
          ]
        },
        {
          "id": "layout",
          "type": "string",
          "format": "dropdown-list",
          "label": { "ar": "التخطيط", "en": "Layout" },
          "value": "2-col",
          "options": [
            { "id": "1-col", "label": { "ar": "عمود واحد", "en": "1 Column" } },
            { "id": "2-col", "label": { "ar": "عمودان", "en": "2 Columns" } },
            { "id": "3-col", "label": { "ar": "ثلاثة أعمدة", "en": "3 Columns" } }
          ]
        }
      ]
    },
    {
      "key": "brands",
      "title": { "ar": "الماركات التجارية", "en": "Brands" },
      "icon": "sicon-badge",
      "path": "home.brands",
      "is_default": false,
      "mobile_component": "BrandsRow",
      "fields": [
        { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" }, "value": { "ar": "الماركات", "en": "Brands" } },
        { "id": "brands", "type": "collection", "format": "brands", "label": { "ar": "الماركات", "en": "Brands" } }
      ]
    },
    {
      "key": "testimonials",
      "title": { "ar": "آراء العملاء", "en": "Customer Testimonials" },
      "icon": "sicon-quote",
      "path": "home.testimonials",
      "is_default": false,
      "mobile_component": "Testimonials",
      "fields": [
        { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" }, "value": { "ar": "ماذا يقول عملاؤنا", "en": "What Our Customers Say" } },
        {
          "id": "items",
          "type": "collection",
          "format": "collection",
          "label": { "ar": "الآراء", "en": "Testimonials" },
          "fields": [
            { "id": "name", "type": "string", "format": "text", "label": { "ar": "اسم العميل", "en": "Customer Name" }, "required": true },
            { "id": "avatar", "type": "string", "format": "image", "label": { "ar": "الصورة", "en": "Avatar" } },
            { "id": "rating", "type": "number", "format": "text", "label": { "ar": "التقييم (1-5)", "en": "Rating (1-5)" }, "value": 5 },
            { "id": "text", "type": "string", "format": "textarea", "label": { "ar": "الرأي", "en": "Review Text" }, "required": true }
          ]
        }
      ]
    },
    {
      "key": "store-features",
      "title": { "ar": "مميزات المتجر", "en": "Store Features" },
      "icon": "sicon-check-circle",
      "path": "home.store-features",
      "is_default": false,
      "mobile_component": "StoreFeatures",
      "fields": [
        {
          "id": "features",
          "type": "collection",
          "format": "collection",
          "label": { "ar": "المميزات", "en": "Features" },
          "fields": [
            { "id": "icon", "type": "string", "format": "icon", "label": { "ar": "الأيقونة", "en": "Icon" }, "required": true },
            { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" }, "required": true },
            { "id": "description", "type": "string", "format": "text", "label": { "ar": "الوصف", "en": "Description" } }
          ]
        }
      ]
    },
    {
      "key": "quick-links",
      "title": { "ar": "روابط سريعة", "en": "Quick Links" },
      "icon": "sicon-link",
      "path": "home.quick-links",
      "is_default": false,
      "mobile_component": "QuickLinks",
      "fields": [
        { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" } },
        {
          "id": "links",
          "type": "collection",
          "format": "collection",
          "label": { "ar": "الروابط", "en": "Links" },
          "fields": [
            { "id": "image", "type": "string", "format": "image", "label": { "ar": "الصورة / الأيقونة", "en": "Image / Icon" } },
            { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" }, "required": true },
            { "id": "url", "type": "string", "format": "text", "label": { "ar": "الرابط", "en": "URL" }, "required": true }
          ]
        }
      ]
    },
    {
      "key": "youtube",
      "title": { "ar": "فيديو يوتيوب", "en": "YouTube Video" },
      "icon": "sicon-youtube",
      "path": "home.youtube",
      "is_default": false,
      "mobile_component": "YoutubeSection",
      "fields": [
        { "id": "video_url", "type": "string", "format": "text", "label": { "ar": "رابط يوتيوب", "en": "YouTube URL" }, "required": true },
        { "id": "title", "type": "string", "format": "text", "label": { "ar": "عنوان الفيديو", "en": "Video Title" } }
      ]
    },
    {
      "key": "latest-products",
      "title": { "ar": "أحدث المنتجات", "en": "Latest Products" },
      "icon": "sicon-clock",
      "path": "home.latest-products",
      "is_default": false,
      "mobile_component": "LatestProducts",
      "fields": [
        { "id": "title", "type": "string", "format": "text", "label": { "ar": "العنوان", "en": "Title" }, "value": { "ar": "أحدث المنتجات", "en": "Latest Products" } },
        { "id": "count", "type": "number", "format": "text", "label": { "ar": "عدد المنتجات", "en": "Products Count" }, "value": 8 }
      ]
    }
  ]
}
